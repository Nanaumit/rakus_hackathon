// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./mydb.db"
}

model User {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  password String
  roomId   Int
  rooms    UserRoom[]
  messages Message[]
}

model UserRoom {
  id      Int      @id @default(autoincrement())
  roomId  Int
  created DateTime
  updated DateTime
  user    User?    @relation(fields: [userId], references: [id])
  userId  Int?
}

model Message {
  id       Int      @id @default(autoincrement())
  data     String
  isMemo   Boolean
  roomId   DateTime
  created  DateTime
  sender   User?    @relation(fields: [senderId], references: [id])
  senderId Int?
}
